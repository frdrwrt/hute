{
  "name": "server",
  "version": "1.0.0",
  "description": "server of the spy project",
  "type": "module",
  "author": "frdr",
  "license": "MIT",
  "scripts": {
    "start": "nodemon node ./src/index.js",
    "test": "NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest",
    "create-migration": "NODE_CONFIG_DIR='../config/' yarn knex --esm --knexfile=./db.js migrate:make",
    "run-migrations": "NODE_CONFIG_DIR='../config/' yarn knex --esm --knexfile=./db.js migrate:latest",
    "run-migrations-test": "NODE_ENV=test NODE_CONFIG_DIR='../config/' yarn knex --esm --knexfile=./db.js migrate:latest"
  },
  "dependencies": {
    "apollo-server-koa": "^2.19.0",
    "apollo-server-testing": "^2.19.0",
    "config": "^3.3.2",
    "graphql": "^15.4.0",
    "knex": "^0.21.12",
    "knex-cleaner": "^1.3.1",
    "koa": "^2.13.0",
    "nodemon": "^2.0.6",
    "pg": "^8.5.1"
  },
  "devDependencies": {
    "jest": "^26.6.3"
  }
}
